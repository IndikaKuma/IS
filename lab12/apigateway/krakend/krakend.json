{
  "version": 2,
  "output_encoding": "json",
  "name": "InventoryOrderAggregate",
  "port": 8081,
  "endpoints": [
    {
      "endpoint": "/ordersinventories/{producttype}/{id}",
      "method": "GET",
      "output_encoding": "json",
      "backend": [
        {
          "url_pattern": "/orders/{id}",
          "encoding": "json",
          "method": "GET",
          "host": [
            "http://order_record_service_ct2:5000/"
          ],
          "disable_host_sanitize": false
        },
        {
          "url_pattern": "/products/{producttype}/quantity",
          "encoding": "json",
          "method": "GET",
          "host": [
            "http://inventory_service_ct2:5000/"
          ],
          "disable_host_sanitize": false
        }
      ]
    },
    {
      "endpoint": "/orders/{id}",
      "method": "GET",
      "extra_config": {
        "github.com/devopsfaith/krakend/proxy": {
          "sequential": true
        }
      },
      "output_encoding": "json",
      "backend": [
        {
          "url_pattern": "/orders/{id}",
          "encoding": "json",
          "method": "GET",
          "host": [
            "http://order_record_service_ct2:5000/"
          ],
          "disable_host_sanitize": false,
          "mapping": {
            "product type": "type"
          }
        },
        {
          "url_pattern": "/products/{resp0_type}/quantity",
          "encoding": "json",
          "method": "GET",
          "host": [
            "http://inventory_service_ct2:5000/"
          ],
          "disable_host_sanitize": false
        }
      ]
    }
  ]
}